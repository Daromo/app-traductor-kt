<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titleHomePopoloca">
        <item name="android:fontFamily">@font/baloo2</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/Purple</item>
    </style>

    <style name="titleHomeEspanol">
        <item name="android:fontFamily">@font/baloo2</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="titleContribuirSection">
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#5D50C6</item>
    </style>

    <style name="textDescriptionContribuir">
        <item name="android:fontFamily">@font/baloo2</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="textDescriptionHome">
        <item name="android:fontFamily">@font/baloo2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIcon">@drawable/ic_check</item>
        <item name="rippleColor">@color/whiteAlpha</item>
    </style>

    <style name="letrasAbecedario">
        <item name="android:backgroundTint">@color/colorButton</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
