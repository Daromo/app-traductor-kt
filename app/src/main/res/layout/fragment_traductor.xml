<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.fragments.TraductorFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_section_blue"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/marginLeftTraductor"
                    android:layout_marginRight="@dimen/marginRightTraductor"
                    android:hint="Ingresa tu palabra"
                    android:background="#fff">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtEspanol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_search"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/marginLeftTraductor"
                    android:layout_marginRight="@dimen/marginRightTraductor"
                    android:text="@string/description_fragment_translate"/>

                <Button
                    android:id="@+id/btnTraductor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Traducir"
                    android:layout_marginLeft="@dimen/marginLeftTraductor"
                    android:layout_marginBottom="@dimen/marginBottomTraductor"
                    android:background="#fff"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultado:"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/marginLeftTraductor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/bg_section_translate_pink"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TÃº palabra en popoloca es:"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/marginLeftTraductor"
                    android:layout_marginRight="@dimen/marginRightTraductor"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>